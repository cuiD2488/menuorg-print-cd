{
  "name": "restaurant-order-printer",
  "version": "1.0.0",
  "description": "MenuorgPrint",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "chcp 65001 >nul 2>&1 && set NODE_OPTIONS=--no-warnings && electron . --dev",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder --publish=always",
    "build-rust": "cargo build --release",
    "prebuild": "npm run build-rust"
  },
  "build": {
    "appId": "com.restaurant.order.printer",
    "productName": "Restaurant Order Printer",
    "removePackageScripts": false,
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "target/release/*.dll",
      "target/release/*.exe",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "target/release",
        "to": ".",
        "filter": [
          "*.dll",
          "*.exe"
        ]
      }
    ]
  },
  "keywords": [
    "restaurant",
    "order",
    "printer",
    "electron"
  ],
  "author": "Restaurant Order Printer",
  "license": "MIT",
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0",
    "node-thermal-printer": "^4.4.0"
  }
}
