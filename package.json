{
  "name": "restaurant-order-printer",
  "version": "1.0.0",
  "description": "MenuorgPrint - CLodop打印方案",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run clean && npm run prebuild && electron-builder",
    "dev": "chcp 65001 >nul 2>&1 && set NODE_OPTIONS=--no-warnings && electron . --dev",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder --publish=always",
    "clean": "powershell -Command \"if (Test-Path 'dist') { Remove-Item -Recurse -Force 'dist' -ErrorAction SilentlyContinue }\"",
    "prebuild": "node build-config.js"
  },
  "build": {
    "appId": "com.restaurant.order.printer",
    "productName": "Restaurant Order Printer",
    "removePackageScripts": false,
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "build-config.js",
      "renderer/**/*",
      "src/**/*",
      "CLodop/**/*",
      "assets/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "restaurant",
    "order",
    "printer",
    "electron",
    "clodop"
  ],
  "author": "Restaurant Order Printer",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "22.3.27",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
}
