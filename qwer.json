{
  "name": "restaurant-order-printer",
  "version": "1.0.0",
  "description": "MenuorgPrint",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "chcp 65001 >nul 2>&1 && set NODE_OPTIONS=--no-warnings && electron . --dev",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder --publish=always",
    "build-rust": "cargo build --release",
    "prebuild": "npm run build-rust"
  },
  "build": {
    "appId": "com.restaurant.orderprinter",
    "productName": "MenuorgPrint",
    "directories": {
      "output": "dist"
    },
    "files": ["**/*", "!node_modules", "target/release/printer-engine.exe"],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    }
  },
  "keywords": ["restaurant", "order", "printer", "electron"],
  "author": "Restaurant Order Printer",
  "license": "MIT",
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0",
    "node-thermal-printer": "^4.4.0"
  }
}
